<Window x:Class="NOPI_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NOPI_Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtStatus" Text="Loading..." Grid.Row="0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
        <Button x:Name="exportXLSX"  Click="exportXLSX_Click" Grid.RowSpan="2">Export Excel</Button>
         <Button x:Name="exportDOCX"  Click="exportDOCX_Click"  Grid.RowSpan="2">Export Excel</Button>
        </StackPanel>
    </Grid>
</Window>
